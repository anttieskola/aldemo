<!-- application container -->
<div id="application">
    <div id="circularG" style="margin: auto; position: absolute; top: 0; left: 0; bottom: 0; right: 0">
        <div id="circularG_1" class="circularG">
        </div>
        <div id="circularG_2" class="circularG">
        </div>
        <div id="circularG_3" class="circularG">
        </div>
        <div id="circularG_4" class="circularG">
        </div>
        <div id="circularG_5" class="circularG">
        </div>
        <div id="circularG_6" class="circularG">
        </div>
        <div id="circularG_7" class="circularG">
        </div>
        <div id="circularG_8" class="circularG">
        </div>
    </div>
</div>


<!-- status template -->
<script type="text/template" id="status-template">
    <div class="statusDiv" style="background-color: <%=Text%>">
        <%=Text%>
    </div>
</script>

<!-- status context menu (shared with all cells) -->
<div id="menu" class="statusContextMenu"
     style="display: none; position:fixed; z-index: 10;">
    <table>
        <tr class="statusContextMenuItem">
            <td>red</td>
        </tr>
        <tr class="statusContextMenuItem">
            <td>yellow</td>
        </tr>
        <tr class="statusContextMenuItem">
            <td>orange</td>
        </tr>
        <tr class="statusContextMenuItem">
            <td>green</td>
        </tr>
        <tr class="statusContextMenuItem">
            <td>blue</td>
        </tr>
    </table>
</div>

@section scripts {
    <!-- application loaded with require -->
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/backbone.js"></script>
    <script src="~/Scripts/require.js"></script>
    <script>
        // must configure base folder for TS modules
        require.config({
            baseUrl: '/TypeScripts'
        });
        // require launch
        require(['require','Main'], function (r, m) {
            m.Main.Run(); // launch app
        });
    </script>
}
